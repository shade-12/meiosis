{
  "manifest_version": 2,
  "name": "Meiosis",
  "description": "A similar websites recommendation browser extension that makes your research experience abcelllutely ctellar.",
  "version": "1.0.0",
  "browser_action": {},
  "icons": {
    "16": "logo-small.png",
    "48": "logo-small.png",
    "128": "logo-small.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-x0xm9ANa8afi65HzG3scXXrfDr09qKLV+PndGjCzDK8='; object-src 'self'",
  "permissions": ["tabs"],
  "content_scripts" : [
    {
      "matches": [ "<all_urls>" ],
      "css": ["/static/css/styles/index.css"],
      "js": ["/static/js/index.js"]
    }
  ],
  "web_accessible_resources":[
      "/static/css/content.css"
  ],
  "background": {
      "scripts": ["app/background.js"]
  }
}
